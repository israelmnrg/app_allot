                    </ul>
                </div>
            </nav>


            <!-- Contenido principal   -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div
                    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h2>Empresa:
                        <span>
                            <b>
                                <%= user.company %>
                            </b>
                        </span>
                    </h2>
                    <h2>Bienvenid@:
                        <span>
                            <b>
                                <%= user.name %>
                            </b>
                        </span>
                    </h2>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th scope="col">
                                    <%= col1 %>
                                </th>
                                <th scope="col">
                                    <%= col2.split(",")[0] %>
                                </th>
                                <th scope="col">
                                    <%= col2.split(",")[1] %>
                                </th>
                                <th scope="col">
                                    <%= col2.split(",")[2] %>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (info.length == 0) { %>
                                <tr>
                                    <td colspan="4">
                                        <h3>Sin datos</h3>
                                    </td>
                                </tr>
                                <% } %>
                            <% info.forEach(function(info){ %>
                                <tr>
                                    <td>
                                        <%= info.date %>
                                    </td>
                                    <td>
                                        <%= info.size.split(",")[0] %>
                                    </td>
                                    <td>
                                        <%= info.size.split(",")[1] %>
                                    </td>
                                    <td>
                                        <%= info.size.split(",")[2] %>
                                    </td>

                                </tr>
                                <% }); %>

                        </tbody>
                    </table>
                </div>
                <canvas id="lineChart1"></canvas>
                <canvas id="lineChart2"></canvas>
                <canvas id="lineChart3"></canvas>

                <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
                <script>
                    var ctx1 = document.getElementById('lineChart1');
                    var chart1 = new Chart(ctx1, {
                        type: 'line',
                        data: {
                            labels: <%- JSON.stringify(date) %>,
                            datasets: [{
                                label: <%-JSON.stringify(col2.split(",")[0]) %>,
                                backgroundColor: '#42a5f5',
                                fill: false,
                                borderColor: 'blue',
                                data: <%- JSON.stringify(size1) %>,
                            },
                            {
                                label: <%-JSON.stringify(col2.split(",")[1]) %>,
                                backgroundColor: '#42a5f5',
                                fill: false,
                                borderColor: 'red',
                                data: <%- JSON.stringify(size2) %>,
                            },
                            {
                                label: <%-JSON.stringify(col2.split(",")[2]) %>,
                                backgroundColor: '#42a5f5',
                                fill: false,
                                borderColor: 'green',
                                data: <%- JSON.stringify(size3) %>,
                            }]
                        },
                    });   
                     
                </script>
